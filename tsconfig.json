{
    "compileOnSave": false,
    "compilerOptions": {
        "sourceMap": true,
        "noEmitOnError": true,
        "noImplicitAny": false,
        "module": "esnext",
        "target": "ES6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "allowJs": true,
        "baseUrl": ".",



        "lib": [
            "es2016.array.include",
            "es2016.promise",
            "es2016.map",
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "jsx": "react"
    },
    "files": [
    ],
    "include": [
        "src/**/*.tsx",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/*.spec.tsx"
    ]
}